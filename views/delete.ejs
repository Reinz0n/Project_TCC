<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style6.css">
  <title>Toko Swalayan - Delete Item</title>
</head>

<body>
  <div class="container">
    <div class="sidebar">
      <ul>
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/create">Create</a></li>
        <li><a href="/show">Show</a></li>
        <li><a href="/edit">Edit</a></li>
        <li><a href="/delete" class="active">Delete</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
    <div class="content">
      <h1>Delete Item</h1>
      <table id="itemTable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- Data dari tabel show akan ditampilkan di sini -->
          <% items.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td><%= item.quantity %></td>
            <td>Rp. <%= item.price %></td>
            <td><a href="/delete/<%= item.ID %>"><button class="delete-button" onclick="confirmDelete(this)">Delete</button></a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <script src="script2.js"></script>
</body>

</html>
